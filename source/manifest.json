{
  "name": "Harvest Chosen",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "This adds the chosen plugin to Harvest's interface",
  "content_scripts": [
    {
      "matches": ["*://*.harvestapp.com/*"],
      "css": ["chosen/chosen.css", "background.css"],
      "js": [
        "jquery-1.8.0.min.js", "chosen/chosen.jquery.min.js", "background.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["chosen/chosen-sprite.png"],
  "homepage_url": "http://github.com/blackrobot/harvest-chosen-chrome-extension/",
  "permissions": [
    "tabs",
    "*://*.harvestapp.com/*"
  ]
}
